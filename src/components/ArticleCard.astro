---
import type { ArticleX } from '../utils';
import {formatDate} from '../utils'
import Tags from '../components/Tags.astro'

const {article} = Astro.props

interface Props{
  article : ArticleX
}
---
<div class="max-w-sm mx-auto mt-8">
  <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out">
    <a href={"/articles/" + article?.slug} class="block relative">
      <img
        src={article?.imageUrl}
        alt="Article Image"
        class="w-full h-56 object-cover transform hover:scale-105 transition duration-300 ease-in-out"
      />
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
    </a>
    <div class="p-6 relative">
      <div class="mb-4">
        <Tags tags={article.tags} />
      </div>
      <h2 class="text-xl font-bold mb-2 text-gray-800 hover:text-indigo-600 transition duration-200">
        <a href={"/articles/" + article?.slug}>{article?.title}</a>
      </h2>
      <p class="text-gray-500 text-sm">
        {formatDate(article?.pubDate)}
      </p>
    </div>
  </div>
</div>